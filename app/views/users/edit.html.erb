<%= form_for @user, url: {action: "create"} do |f| %>
  <%= f.label(:email) %><br/>
  <%= f.email_field(:email, placeholder: "example@example.com") %><br/><br/>
  <%= f.label(:username, "Your user name here:") %><br/>
  <%= f.text_field :username %><br/><br/>
  <%= f.label(:password) %><br/>
  <%= f.password_field :password %><br/><br/>
  <%= f.submit "Create" %>
<% end %>